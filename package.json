{
  "name": "birds",
  "displayName": "birds",
  "publisher": "bra1nDump",
  "description": "Leave breakcrumbs across the codebase and have llm type for you inline",
  "version": "0.0.3",
  "license": "Business Source License 1.1",
  "icon": "icon-v1.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bra1nDump/bread"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "birds.chaseBread",
        "title": "Code Birds: Chase @bread-ed files and apply requested changes"
      },
      {
        "command": "birds.chaseBugs",
        "title": "Code Birds: Chase files with problems and fix them"
      }
    ],
    "configuration": {
      "properties": {
        "birds.at-bread-mention": {
          "type": "string",
          "default": "bread",
          "description": "Override the keyword to provide context to the llm. Will affect both mentions in the comments and file extension"
        },
        "birds.openaiApiKey": {
          "type": "string",
          "description": "OpenAI API key"
        }
      }
    },
    "keybindings": []
  },
  "scripts": {
    "bundle": "webpack",
    "watch": "webpack --watch",
    "bundle:prod": "webpack --mode production --devtool false",
    "package": "./node_modules/.bin/vsce package --no-dependencies --allow-star-activation",
    "publish": "echo 'add testing - currently broken' && npm run package && ./node_modules/.bin/vsce publish --allow-star-activation",
    "install-local": "node install-local.mjs 'code-insiders'",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run bundle && npm run lint",
    "lint": "eslint . --ext ts --fix",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.20.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "glob": "^8.1.0",
    "jsonfile": "^6.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "ix": "^5.0.0",
    "openai": "^4.0.0"
  }
}