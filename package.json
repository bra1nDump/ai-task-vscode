{
  "name": "ai-task",
  "displayName": "AI Task - Multifile edits",
  "publisher": "bra1nDump",
  "description": "Leave comments across your codebase with @task mentions and have AI address them, even if it requires multi-file changes",
  "version": "0.0.10",
  "license": "Business Source License 1.1",
  "icon": "icon-v2.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bra1nDump/bread"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-task.completeInlineTasks",
        "title": "Task String AI: Complete inline tasks"
      }
    ],
    "configuration": {
      "properties": {
        "ai-task.taskMentionIdentifier": {
          "type": "string",
          "default": "task",
          "description": "Override the keyword the LLM uses when searching for its task"
        },
        "ai-task.openaiApiKey": {
          "type": "string",
          "description": "OpenAI API key"
        },
        "ai-task.additionalExcludedDirectories": {
          "type": "array",
          "default": [],
          "description": "Directories to exclude when searching for files to pass to the prompt"
        }
      }
    },
    "keybindings": [
      {
        "command": "ai-task.completeInlineTasks",
        "key": "ctrl+y",
        "mac": "cmd+y"
      }
    ]
  },
  "scripts": {
    "webpack:base": "webpack --config configurations/webpack.config.js",
    "webpack:watch": "npm run webpack:base -- --watch",
    "bundle:prod": "npm run webpack:base -- --mode production --devtool false",
    "package": "./node_modules/.bin/vsce package --ignoreFile configurations/.vscodeignore --no-dependencies --allow-star-activation",
    "publish": "npm run package && npm run test && npm run package && ./node_modules/.bin/vsce publish --allow-star-activation",
    "install-local": "node scripts/install-local.mjs 'code-insiders'",
    "tsc": "tsc -p . --outDir out",
    "watch-tsc": "tsc -p . -w --outDir out",
    "lint": "eslint . --config configurations/.eslintrc.js --ext ts --fix",
    "test": "node out/test/runTest.js",
    "codegen:prompt-checkpoints": "MULTI_FILE_PROMPT_VERSION=v2-unified-task-changes node ./out/script-generate-prompt-checkpoint.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/source-map-support": "^0.5.7",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.20.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-comment-length": "^1.6.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "glob": "^8.1.0",
    "jsonfile": "^6.1.0",
    "mocha": "^10.2.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "ix": "^5.0.0",
    "openai": "^4.0.0"
  }
}