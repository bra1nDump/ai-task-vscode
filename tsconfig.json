{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020",
			// This is needed for ix - library with async iterable operators
			"DOM"
		],
		"outDir": "out/src",
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "src",
	},
	"include": [
		"src/**/*",
	],
}